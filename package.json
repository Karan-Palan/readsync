{
	"name": "readsync",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"next": "^16.1.1",
			"@prisma/client": "^7.2.0",
			"@trpc/server": "^11.7.2",
			"@trpc/client": "^11.7.2",
			"better-auth": "^1.4.18",
			"@polar-sh/better-auth": "^1.6.4"
		}
	},
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:desktop": "turbo -F desktop dev",
		"dev:web": "turbo -F web dev",
		"build:desktop": "turbo -F desktop build",
		"package:desktop": "turbo -F desktop package",
		"db:push": "turbo -F @readsync/db db:push",
		"db:studio": "turbo -F @readsync/db db:studio",
		"db:generate": "turbo -F @readsync/db db:generate",
		"db:migrate": "turbo -F @readsync/db db:migrate",
		"check": "biome check --write .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
	},
	"dependencies": {
		"@readsync/env": "workspace:*",
		"@xincmm/foliate-js": "^0.1.3",
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@readsync/config": "workspace:*",
		"@types/node": "^22.13.14",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.8"
}
